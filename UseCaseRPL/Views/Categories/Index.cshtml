@model IEnumerable<UseCaseRPL.Models.Category>

@{
    ViewBag.Title = "Category";
}
<div class="jumbotron">
    <h2>List Category</h2>
</div>
<br />

@using (Html.BeginForm("Search", "Categories", FormMethod.Post, new {@class = "form-inline" }))
{
    <label for="CategoryName">Masukan Nama Kategori:</label><br/>
    <input type="text" name="txtSearch" />
    <input type="submit" value="Search" class="btn btn-primary btn-sm" />
}
<br />

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
       
            @Html.ActionLink("Edit", "Edit", new { id=item.CategoryID }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CategoryID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
